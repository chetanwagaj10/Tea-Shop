<!DOCTYPE html>

<html>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")

    <link href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/css/toastr.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.0.1/js/toastr.js"></script>

    <link href="~/Content/Site.css" rel="stylesheet" />
</head>

<body>
    <div id="main">

        <header>
            <nav class="navbar navbar-expand-sm bg-dark navbar-dark fixed-top">
                <a class="navbar-brand customNavBar-logo" href="http://localhost:58889/TeaShopProduct/TeaShopView">
                    <img src="~/Content/Img/TeaIcon.jpg" />
                </a>
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <span style="font-weight:bold;font-size: x-large;color: white;">
                            Sadguru's Tea Shop
                        </span>
                    </li>
                </ul>
            </nav>
        </header>

        <section>
            <div class="container body-content">
                @RenderBody()
                <hr />

            </div>
        </section>

        <footer>
            <p>&copy; @DateTime.Now.Year - Sadguru's Tea Shop</p>
        </footer>

    </div>

    @Scripts.Render("~/bundles/jquery")

    @Scripts.Render("~/bundles/bootstrap")

    @Scripts.Render("~/bundles/toastr")
    @*@RenderSection("scripts", required: false)*@

</body>

</html>
